{
  "name": "nunjucks-boilerplate",
  "version": "1.0.0",
  "description": "A production-ready vanilla HTML, CSS, and JS boilerplate using Nunjucks.",
  "main": "index.js",
  "scripts": {
    "build": "node build.js",
    "start": "node build.js && npx serve dist",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./dist/styles.css",
    "watch:css": "tailwindcss -i ./src/styles/input.css -o ./dist/styles.css --watch",
    "dev": "npm run build && concurrently \"npm run watch:css\" \"npx serve dist\""
  },
  "dependencies": {
    "nunjucks": "^3.2.3"
  },
  "devDependencies": {
    "serve": "^14.2.0",
    "tailwindcss": "^3.3.3",
    "concurrently": "^8.2.1"
  },
  "author": "ChatGPT",
  "license": "MIT"
}